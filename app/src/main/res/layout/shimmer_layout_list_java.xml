<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="@dimen/margin_16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/item_java_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.68" />

    <View
        android:id="@+id/shimmer_view_one"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_marginStart="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/margin_16dp"
        android:layout_marginEnd="@dimen/margin_16dp"
        android:background="@color/gray_9E9E9E"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/item_java_guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/shimmer_view_two"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:background="@color/gray_9E9E9E"
        app:layout_constraintEnd_toEndOf="@+id/shimmer_view_one"
        app:layout_constraintStart_toStartOf="@+id/shimmer_view_one"
        app:layout_constraintTop_toBottomOf="@+id/shimmer_view_one" />

    <View
        android:id="@+id/shimmer_view_three"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/background_round"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/item_java_guideline"
        app:layout_constraintTop_toTopOf="@+id/shimmer_view_one" />

    <View
        android:id="@+id/shimmer_view_four"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="10dp"
        android:layout_marginStart="@dimen/margin_8dp"
        android:layout_marginTop="@dimen/margin_8dp"
        android:layout_marginEnd="@dimen/margin_8dp"
        android:background="@color/gray_9E9E9E"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/item_java_guideline"
        app:layout_constraintTop_toBottomOf="@+id/shimmer_view_three" />


    <View
        android:id="@+id/shimmer_view_five"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="10dp"
        android:layout_marginStart="@dimen/margin_8dp"
        android:layout_marginTop="@dimen/margin_8dp"
        android:layout_marginEnd="@dimen/margin_8dp"
        android:background="@color/gray_9E9E9E"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/item_java_guideline"
        app:layout_constraintTop_toBottomOf="@+id/shimmer_view_four" />

</androidx.constraintlayout.widget.ConstraintLayout>