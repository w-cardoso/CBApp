<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin_16dp">

    <TextView
        android:textColor="@color/blue_2193ED"
        android:id="@+id/item_java_repository_name"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/margin_16dp"
        android:textSize="@dimen/size_18sp"
        app:layout_constraintEnd_toStartOf="@+id/item_java_guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Nome do Repositorio" />

    <TextView
        android:id="@+id/item_java_repository_description"
        android:layout_width="@dimen/dimen_0dp"
        android:maxLines="3"
        android:ellipsize="end"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/item_java_guideline"
        app:layout_constraintStart_toStartOf="@+id/item_java_repository_name"
        app:layout_constraintTop_toBottomOf="@+id/item_java_repository_name"
        tools:text="Neque porro quisquam est qui dolorem ipsum quia dolor sit amet, consectetur, adipisci velit.." />

    <TextView
        android:id="@+id/item_java_repository_branch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8dp"
        android:textSize="@dimen/size_18sp"
        app:drawableStartCompat="@drawable/ic_branch"
        app:layout_constraintStart_toStartOf="@+id/item_java_repository_name"
        app:layout_constraintTop_toBottomOf="@+id/item_java_repository_description"
        tools:text="640" />

    <TextView
        android:id="@+id/item_java_repository_favorite"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_8dp"
        android:textSize="@dimen/size_18sp"
        app:drawableStartCompat="@drawable/ic_star"
        app:layout_constraintEnd_toStartOf="@+id/item_java_guideline"
        app:layout_constraintStart_toEndOf="@+id/item_java_repository_branch"
        app:layout_constraintTop_toTopOf="@+id/item_java_repository_branch"
        tools:text="98" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/item_java_img"
        android:layout_width="@dimen/margin_50dp"
        android:layout_height="@dimen/margin_50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/item_java_guideline"
        app:layout_constraintTop_toTopOf="@+id/item_java_repository_name"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"
        app:srcCompat="@mipmap/ic_launcher" />

    <ProgressBar
        android:id="@+id/item_java_img_progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/item_java_repository_username"
        app:layout_constraintEnd_toEndOf="@+id/item_java_img"
        app:layout_constraintStart_toStartOf="@+id/item_java_img"
        app:layout_constraintTop_toTopOf="@+id/item_java_img" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/item_java_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.68" />

    <TextView
        android:textColor="@color/blue_2193ED"
        android:id="@+id/item_java_repository_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/item_java_img"
        app:layout_constraintStart_toStartOf="@+id/item_java_img"
        app:layout_constraintTop_toBottomOf="@+id/item_java_img"
        tools:text="username" />

    <TextView
        android:id="@+id/item_java_repository_surname"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/item_java_guideline"
        app:layout_constraintTop_toBottomOf="@+id/item_java_repository_username"
        tools:text="Nome Sobrenome" />


</androidx.constraintlayout.widget.ConstraintLayout>