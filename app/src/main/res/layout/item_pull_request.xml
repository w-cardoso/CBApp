<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="@dimen/margin_16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:textColor="@color/blue_2193ED"
        android:layout_marginTop="@dimen/margin_16dp"
        android:ellipsize="end"
        android:id="@+id/item_pull_request_title"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16dp"
        android:maxLines="1"
        android:layout_marginEnd="@dimen/margin_16dp"
        android:textSize="@dimen/size_18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Titulo do Pull Request" />

    <TextView
        android:id="@+id/item_pull_request_description"
        android:ellipsize="end"
        android:maxLines="3"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/size_16sp"
        app:layout_constraintEnd_toEndOf="@+id/item_pull_request_title"
        app:layout_constraintStart_toStartOf="@+id/item_pull_request_title"
        app:layout_constraintTop_toBottomOf="@+id/item_pull_request_title"
        tools:text="Neque porro quisquam est qui dolorem ipsum quia dolor sit amet, consectetur, adipisci velit.." />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/item_pull_request_img"
        android:layout_width="@dimen/margin_50dp"
        android:layout_height="@dimen/margin_50dp"
        android:layout_marginTop="@dimen/margin_16dp"
        app:layout_constraintStart_toStartOf="@+id/item_pull_request_title"
        app:layout_constraintTop_toBottomOf="@+id/item_pull_request_description"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"
        app:srcCompat="@mipmap/ic_launcher" />

    <ProgressBar
        android:id="@+id/item_pull_request_img_progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/item_pull_request_img"
        app:layout_constraintStart_toStartOf="@+id/item_pull_request_img"
        app:layout_constraintTop_toTopOf="@+id/item_pull_request_img" />

    <TextView
        android:textColor="@color/blue_2193ED"
        android:id="@+id/item_pull_request_username"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16dp"
        android:textStyle="bold"
        android:ellipsize="end"
        app:layout_constraintEnd_toEndOf="@+id/item_pull_request_title"
        app:layout_constraintStart_toEndOf="@+id/item_pull_request_img"
        app:layout_constraintTop_toTopOf="@+id/item_pull_request_img"
        tools:text="username" />

    <TextView
        android:id="@+id/item_pull_request_name_surname"
        android:layout_width="@dimen/dimen_0dp"
        android:ellipsize="end"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/item_pull_request_img"
        app:layout_constraintEnd_toEndOf="@+id/item_pull_request_title"
        app:layout_constraintStart_toStartOf="@+id/item_pull_request_username"
        app:layout_constraintTop_toBottomOf="@+id/item_pull_request_username"
        tools:text="Nome Sobrenome" />
</androidx.constraintlayout.widget.ConstraintLayout>